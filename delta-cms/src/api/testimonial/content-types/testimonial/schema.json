{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Témoignage",
    "description": "Témoignages clients"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "clientName": {
      "type": "string",
      "required": true
    },
    "clientPhoto": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "testimonial": {
      "type": "text",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5,
      "default": 5
    },
    "service": {
      "type": "string",
      "required": false
    },
    "location": {
      "type": "string",
      "required": false
    },
    "isVerified": {
      "type": "boolean",
      "default": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
} 